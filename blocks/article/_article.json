{
  "definitions": [
    {
      "title": "Article",
      "id": "article",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Article",
              "model": "article"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "article",
      "fields": [
        {
          "component": "select",
          "label": "Layout Type",
          "name": "layout-type",
          "valueType": "string",
          "options": [
            { "name": "All Articles", "value": "child-article" },
            { "name": "All Articles with tags", "value": "child-article-tag" },
            { "name": "Fetch Articles Manually", "value": "fixed-article" }
          ]
        },
        {
          "component": "container",
          "label": "List all Articles under the Selected Parent Page",
          "name": "child-article-container",
          "valueType": "string",
          "collapsible": false,
          "fields": [
            {
              "component": "aem-content",
              "name": "child-article-parent",
              "label": "Choose Article Parent Page",
              "valueType": "string",
              "required": true,
              "validation": {
                "rootPath": "/content/eds-wknd"
              }
            }
          ],
          "condition": { "===": [{"var" : "layout-type"}, "child-article"] }
        },
        {
          "component": "container",
          "label": "List all Articles with Tag filter under Selected Parent Page",
          "name": "child-article-tag-container",
          "valueType": "string",
          "collapsible": false,
          "fields": [
            {
              "component": "aem-content",
              "name": "child-article-tag-parent",
              "label": "Choose Article Parent Page",
              "valueType": "string",
              "required": true,
              "validation": {
                "rootPath": "/content/eds-wknd"
              }
            }
          ],
          "condition": { "===": [{"var" : "layout-type"}, "child-article-tag"] }
        },
        {
          "component": "multiaem-content",
          "name": "fixed-article",
          "label": "Provide Page Path to Display Articles",
          "valueType": "link",
          "required": true,
          "validation": {
            "rootPath": "/content/eds-wknd"
          },
          "condition": { "===": [{"var" : "layout-type"}, "fixed-article"]}
        }
      ]
    }
  ],
  "filters": []
}