{
  "definitions": [
    {
      "title": "Articles",
      "id": "articles",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Articles",
              "model": "articles"
            }
          }
        }
      }
    },
    {
      "title": "Article",
      "id": "article",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": {
              "name": "Article",
              "model": "article"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "articles",
      "fields": [
        {
          "component": "select",
          "label": "Layout Type",
          "name": "layout-type",
          "valueType": "string",
          "options": [
            {
              "name": "All Articles",
              "value": "child-article"
            },
            {
              "name": "All Articles with tags",
              "value": "child-article-tag"
            },
            {
              "name": "Fetch Articles Manually",
              "value": "fixed-article"
            }
          ]
        },
        {
          "component": "container",
          "label": "List all Articles as card under the Selected Parent Page",
          "name": "child-article-container",
          "valueType": "string",
          "collapsible": false,
          "fields": [
            {
              "component": "aem-content",
              "name": "child-article-parent",
              "label": "Choose Article Parent Page",
              "valueType": "string",
              "required": true,
              "validation": {
                "rootPath": "/content/eds-wknd"
              }
            }
          ],
          "condition": {
            "===": [
              {
                "var": "layout-type"
              },
              "child-article"
            ]
          }
        },
        {
          "component": "container",
          "label": "List all Articles as card with Tag filter under Selected Parent Page",
          "name": "child-article-tag-container",
          "valueType": "string",
          "collapsible": false,
          "fields": [
            {
              "component": "aem-content",
              "name": "child-article-tag-parent",
              "label": "Choose Article Parent Page",
              "valueType": "string",
              "required": true,
              "validation": {
                "rootPath": "/content/eds-wknd"
              }
            }
          ],
          "condition": {
            "===": [
              {
                "var": "layout-type"
              },
              "child-article-tag"
            ]
          }
        },
        {
          "component": "container",
          "label": "List Article Cards from Selected Page",
          "name": "fixed-article-container",
          "valueType": "string",
          "collapsible": true,
          "fields": [
            {
              "component": "aem-content",
              "name": "fixed-article-parent",
              "label": "Choose Page path",
              "valueType": "string[]",
              "multi":true,
              "required": true,
              "validation": {
                "rootPath": "/content/eds-wknd"
              }
            }
          ],
          "condition": {
            "===": [
              {
                "var": "layout-type"
              },
              "fixed-article"
            ]
          }
        }
      ]
    },
    {
      "id": "article",
      "fields": [
        {
          "component": "container",
          "label": "Select a Page to Create an Article Card",
          "name": "article-container",
          "valueType": "string",
          "collapsible": false,
          "fields": [
            {
              "component": "aem-content",
              "name": "article-path",
              "label": "Choose Page path",
              "valueType": "string",
              "required": true,
              "validation": {
                "rootPath": "/content/eds-wknd"
              }
            }
          ]
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "articles",
      "components": [
        "article"
      ]
    }
  ]
}